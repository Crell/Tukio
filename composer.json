{
    "name": "Crell/Tukio",
    "type": "library",
    "description": "A robust, stand-alone PSR-14 event dispatcher implementation.",
    "keywords": [
        "Tukio",
        "PSR-14",
        "Events"
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/php-fig/event-dispatcher"
        },
        {
            "type": "vcs",
            "url": "https://github.com/php-fig/event-dispatcher-util"
        }
    ],
    "homepage": "https://github.com/Crell/Tukio",
    "license": "LGPLv3+",
    "authors": [
        {
            "name": "Larry Garfield",
            "email": "larry@garfieldtech.com",
            "homepage": "http://www.garfieldtech.com/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.1",
        "psr/container": "^1.0",
        "psr/event-dispatcher": "0.6.0",
        "psr/event-dispatcher-task": "0.6.0",
        "psr/event-dispatcher-message": "0.6.0",
        "fig/event-dispatcher-util": "^0.6.0",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "phpbench/phpbench": "@dev",
        "phpunit/phpunit": ">=7.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Crell\\Tukio\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Crell\\Tukio\\": "tests",
            "Crell\\Tukio\\Benchmarks\\": "benchmarks"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
